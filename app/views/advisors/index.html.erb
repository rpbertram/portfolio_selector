<div class="page-header">
  <h1>
    Advisors
    <a href="/advisors/new" class="btn btn-lg btn-success">New Advisor</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @advisors.each do |advisor| %>
      <tr>
        <td><%= advisor.firstname %></td>
        <td><%= advisor.lastname %></td>
        <td><%= advisor.email %></td>
        <td><%= advisor.password %></td>
        <td>
          <a href="/advisors/<%= advisor.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @advisors, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
